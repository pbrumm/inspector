<p id="notice"><%= notice %></p>

<p>
  <h2>Details for: <%= @site.name %></h2>
</p>

<p>
  <strong>Type:</strong>
  <%= @site.site_type %>
</p>

<p>
  <strong>ID:</strong>
  <%= @site.site_number %>
</p>

<% if @inspections.present? %>

	<h3>Inspections</h3>
	<table>
		<thead>
			<th>Name</th>
			<th>Date</th>
		</thead>

		<tbody>
			<% @inspections.each do |inspection| %>
			  <tr>

			  	<td><%= link_to "#{inspection.name}", site_inspection_path(@site, inspection) %></td>
			  	<td><%= inspection.updated_at.strftime("%m/%d/%Y") %></td>
			  </tr>
			<% end %>
		</tbody>
	</table>
<% end %>



<%= link_to 'New Inspection', new_site_inspection_path(@site) %> | 
<%= link_to 'Edit', edit_site_path(@site) %> |
<%= link_to 'Back', sites_path %>


